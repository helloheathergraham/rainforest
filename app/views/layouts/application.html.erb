<!DOCTYPE html>
<html>
<head>
  <title>Rainforest</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "main" %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
     <header>
       <div class="frame">
       	<div class="col2">
       		<h1><%= link_to "Rainforest", products_url%></h1>
       	</div>
         <div class="col2">
           <div class="main-nav">
           <p class="userinfo">
              <% if current_user %>
                Signed in as <%= current_user.email %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
              <% else %>
                <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
              <% end %>
            </p>
          </div>
         </div>
       </div>
     </header>

  <section>
       <div class="frame">
           <div class="col1 main-content">
              <% if flash[:notice] %>
                <p id="notice"><%= flash[:notice] %></p>
              <% end %>
              <% if flash[:alert] %>
                <p id="alert"><%= flash[:alert] %></p>
              <% end %>
    				<%= yield %>
           </div>
       </div>
   </section>

</body>
</html>
